{
  "project": {
    "name": "Mind Swarm 3D Monitor",
    "type": "typescript-threejs",
    "description": "Real-time 3D visualization for Mind Swarm AI agents",
    "version": "0.1.0"
  },
  "environment": {
    "node_version": ">=18.0.0",
    "package_manager": "npm",
    "primary_language": "typescript",
    "frameworks": ["three.js", "vite"],
    "development_port": 5175,
    "backend_ws_port": 8765
  },
  "development": {
    "auto_format_on_save": false,
    "strict_typescript": true,
    "prefer_const": true,
    "use_semicolons": false,
    "quote_style": "single",
    "indent_size": 2
  },
  "code_style": {
    "architecture": "class-based",
    "naming": {
      "files": "PascalCase",
      "classes": "PascalCase",
      "methods": "camelCase",
      "constants": "UPPER_SNAKE_CASE"
    }
  },
  "commands": {
    "dev": "npm run dev",
    "build": "npm run build",
    "preview": "npm run preview",
    "typecheck": "tsc --noEmit",
    "backend_start": "cd ../mind-swarm && ./manage_server.sh start",
    "backend_logs": "cd ../mind-swarm && logview -f"
  },
  "testing": {
    "framework": "none",
    "coverage_threshold": 0,
    "todo": ["Add Vitest for unit testing", "Consider Playwright for E2E"]
  },
  "quality_tools": {
    "linter": "none",
    "formatter": "none",
    "type_checker": "typescript",
    "todo": ["Add ESLint with TypeScript plugin", "Add Prettier", "Add Husky for pre-commit"]
  },
  "dependencies": {
    "runtime": {
      "three": "^0.160.0",
      "lil-gui": "^0.19.0"
    },
    "dev": {
      "typescript": "^5.0.0",
      "vite": "^5.0.0",
      "@types/three": "^0.160.0",
      "@types/node": "^20.0.0"
    }
  },
  "integrations": {
    "backend": {
      "type": "websocket",
      "url": "ws://localhost:8765",
      "project_path": "../mind-swarm"
    }
  }
}